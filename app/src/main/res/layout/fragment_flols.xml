<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bogueratcreations.eaftoolkit.FLOLSFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/etH2E"
        android:layout_column="1"
        android:layout_row="1"
        android:text="16.7" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/etGSA"
        android:layout_column="1"
        android:layout_row="2"
        android:text="3.0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/etDistCL"
        android:layout_column="1"
        android:layout_row="3"
        android:text="122.5" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dist OLS Beyond Cable"
        android:id="@+id/textView6"
        android:gravity="right"
        android:layout_row="4"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/etDistTD"
        android:layout_column="1"
        android:layout_row="4"
        android:text="257" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TD Point Before Cable"
        android:id="@+id/textView7"
        android:gravity="right"
        android:layout_row="5"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etDistBeyond"
        android:layout_column="1"
        android:layout_row="5"
        android:gravity="center"
        android:text="150" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Distances in Feet"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hook-to-Eye of Aircraft"
        android:id="@+id/textView"
        android:gravity="right"
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Glide Slope Angle"
        android:id="@+id/textView3"
        android:gravity="right"
        android:layout_column="0"
        android:layout_row="2" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lateral Distance from C/L"
        android:id="@+id/textView4"
        android:gravity="right"
        android:layout_column="0"
        android:layout_row="3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Survey Values in Inches"
        android:id="@+id/textView8"
        android:gravity="center"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Center Cell Ht Above Pad"
        android:id="@+id/textView9"
        android:gravity="right"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etCellHt"
        android:layout_row="7"
        android:layout_column="1"
        android:text="52"
        android:gravity="center" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Site Pole Elev(+/-) FLOLS"
        android:id="@+id/textView10"
        android:gravity="right"
        android:layout_row="8"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etElevBASP"
        android:layout_row="8"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Runway Site Pole Elev"
        android:id="@+id/textView11"
        android:gravity="right"
        android:layout_row="9"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etElevRWSP"
        android:layout_row="9"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hook TD Point Elev"
        android:id="@+id/textView12"
        android:gravity="right"
        android:layout_row="10"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etElevTD"
        android:layout_row="10"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Results"
        android:id="@+id/btnResults"
        android:layout_gravity="center"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Basic Angle Site Pole Ht"
        android:id="@+id/textView13"
        android:gravity="right"
        android:layout_row="12"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etBAPH"
        android:layout_row="12"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C/L Site Pole Dist Fm OLS"
        android:id="@+id/textView14"
        android:gravity="right"
        android:layout_row="13"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etSPDist"
        android:layout_row="13"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Runway Site Pole Ht"
        android:id="@+id/textView15"
        android:gravity="right"
        android:layout_row="14"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etRWPH"
        android:layout_row="14"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Roll Setting for HTDP"
        android:id="@+id/textView16"
        android:gravity="right"
        android:layout_row="15"
        android:layout_column="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etRoll"
        android:layout_row="15"
        android:layout_column="1"
        android:gravity="center"
        android:text="0" />
</GridLayout>

</ScrollView>