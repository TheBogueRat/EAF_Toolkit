<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_projects"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bogueratcreations.eaftoolkit.DCP.Projects"
    tools:showIn="@layout/activity_projects">

    <ImageView
        android:id="@+id/ivSky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="Rolling grassy hills and blue sky"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/skyscape" />

    <TextView
        android:id="@+id/tvDCPheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivSky"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/select_create_project"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPointLabel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/ivSky"
        android:layout_marginLeft="8dp"
        android:gravity="bottom"
        android:text="Project (site)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPtsLabel"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivSky"
        android:layout_marginRight="4dp"
        android:gravity="bottom|center_horizontal"
        android:text="# of Points"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewProjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPtsLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="72dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewProjects"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/listViewProjects"
        android:layout_marginBottom="12dp"
        android:text="Long-press to edit Project details"
        android:textColor="@color/BRCsubtext"
        android:textSize="18sp" />

</RelativeLayout>
