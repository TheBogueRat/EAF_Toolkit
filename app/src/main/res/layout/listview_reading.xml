<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlReading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvReadingNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvHammerType"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/tvReadingNum"
        android:layout_toRightOf="@+id/tvReadingNum"
        android:gravity="center"
        android:text="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBlows"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/tvHammerType"
        android:layout_toRightOf="@+id/tvHammerType"
        android:gravity="center"
        android:text="99"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDepth"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/tvBlows"
        android:layout_toRightOf="@+id/tvBlows"
        android:gravity="center"
        android:text="100"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCbr"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/tvDepth"
        android:layout_toRightOf="@+id/tvDepth"
        android:gravity="center"
        android:text="83.5"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/tvCbr"
        android:layout_toRightOf="@+id/tvCbr"
        android:gravity="center"
        android:text="1035"
        android:textSize="18sp" />
</RelativeLayout>