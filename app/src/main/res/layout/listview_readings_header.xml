<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="#"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/ivHammer"
            android:layout_toRightOf="@+id/ivHammer"
            android:gravity="center"
            android:text="Blows"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/tv4"
            android:layout_toRightOf="@+id/tv4"
            android:gravity="center"
            android:text="Depth"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/tv3"
            android:layout_toRightOf="@+id/tv3"
            android:gravity="center"
            android:text="CBR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/tv2"
            android:layout_toRightOf="@+id/tv2"
            android:gravity="center"
            android:text="Total"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivHammer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/tv6"
            android:layout_toRightOf="@+id/tv6"
            app:srcCompat="@drawable/hammer" />
    </RelativeLayout>
</LinearLayout>