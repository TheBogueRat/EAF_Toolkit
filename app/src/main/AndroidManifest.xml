<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bogueratcreations.eaftoolkit" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.bogueratcreations.eaftoolkit.Main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Julian"
            android:label="@string/title_activity_julian"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".Slope"
            android:label="@string/title_activity_slope"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".MatCalc"
            android:label="@string/title_activity_mat_calc"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".FLOLS"
            android:label="@string/title_activity_flols"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".Pics"
            android:label="@string/title_activity_pics"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".imgGallery.ui.ImageGridActivity"
            android:label="Grid View"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".imgGallery.ui.ImageDetailActivity"
            android:label="Picture View"
            android:parentActivityName=".imgGallery.ui.ImageGridActivity"
            android:theme="@style/AppThemeDark.FullScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".imgGallery.ui.ImageGridActivity" />
        </activity>
        <activity
            android:name=".Inspections"
            android:label="@string/title_activity_inspections" >
        </activity>
        <activity
            android:name=".ChkList"
            android:label="@string/title_activity_chk_list"
            android:parentActivityName=".Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
        <activity
            android:name=".Program"
            android:label="@string/title_activity_program"
            android:parentActivityName=".Main"
            android:theme="@style/CustomActionBarTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogueratcreations.eaftoolkit.Main" />
        </activity>
    </application>

</manifest>
